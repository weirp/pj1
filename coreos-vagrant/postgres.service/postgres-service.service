[Unit]
Description=Postgresql
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
ExecStart=/usr/bin/docker run --rm --name=postgresql -p 5432:5432 postgresql
ExecStartPost=/usr/bin/etcdctl set /data/postgres-service/%H:%i running
ExecStop=/usr/bin/docker stop postgresql
ExecStopPost=/usr/bin/etcdctl rm /domains/postgres-service/%H:%i
